include ../utils/util.pug
include ../utils/mixin.pug

doctype html
html(lang=config.language)
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="canonical" href=stripFileName(url))
    +pageTitle
    +pageSequenceLink
    +preLoadImage
    if theme.favicon
      link(rel="shortcut icon" href=url_for(theme.favicon))
    link(rel="stylesheet" href=url_for("/css/index.css"))
  body
